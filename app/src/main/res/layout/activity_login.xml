<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_login" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="大栅栏派出所勤务指挥系统"
        android:textColor="#506d9b"
        android:textSize="40px" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="255dp"
        android:layout_height="272dp"
        android:layout_gravity="center"
        android:background="@drawable/login_llbg_fillet"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/login_user"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:hint="请输入用户名"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/login_passwork"/>

            <EditText
                android:id="@+id/et_lognin_password"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:password="true"
                android:hint="输入密码"/>


        </LinearLayout>

        <Button
            android:id="@+id/b_sign_in"
            android:layout_marginTop="40dp"
            android:layout_width="204dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="登录"
            android:background="@drawable/login_button_bg"/>
    </LinearLayout>

    <TextView
        android:layout_width="255dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="#668ab8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="北控三兴信息技术有限公司"
        android:textColor="#668ab8"
        android:textSize="24px" />

</LinearLayout>