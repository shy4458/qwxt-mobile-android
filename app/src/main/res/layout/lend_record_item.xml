<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_record_lv_item_name"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="小王"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_record_lv_item_time"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2017-11-22 9:00"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_lend_record_lv_lc"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_record_lv_item_sendtime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2017-11-12 9:00"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_record_lv_lc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>