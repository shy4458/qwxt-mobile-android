<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--背景颜色-->
    <solid android:color="#E8E8E8" />

    <!--设置边距-->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <!--控制边界线颜色和大小-->
    <stroke
        android:width="1dp"
        android:color="#d2d2d2" />


    <!--控制圆角大小-->
    <corners android:radius="5dp" />

</shape>