<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--背景颜色-->
    <solid android:color="#ffffff" />

    <!--设置边距-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <!--控制边界线颜色和大小-->
    <stroke
        android:width="1dp"
        android:color="#6c6c6c" />


    <!--控制圆角大小-->
    <corners android:radius="5dp" />

</shape>